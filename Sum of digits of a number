#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n, temp, rem, sum=0;
    cout<<"enter a number" <<endl;
    cin>>n;
    temp = n;
    while(n!=0)
    {
        rem = n % 10;
        sum = sum + rem;
        n = n / 10;
    }
    
    cout<<"sum of digits of an integer " <<" " << sum << endl;
    return 0;
}

enter a number
12345
sum of digits of an integer  15
