#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n, i;
    cout<<"enter a number" <<endl;
    cin>>n;
    int sum = 0;
    for(i=1;i<+n;i++)
    {
        if(n%i==0)
        {
            sum = sum + i;
        }
    }
    if(sum == n)
    cout<<"Perfect Number" <<endl;
    else
    cout<<"Not a perfect number" <<endl;
    return 0;
}

enter a number
6
Perfect Number
